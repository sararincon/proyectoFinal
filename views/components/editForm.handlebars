<div class="container-fluid my-5">
  {{#each response}}
    <form
      action="/update/{{this.id}}"
      method="post"
      enctype="multipart/form-data"
    >

      <div class="form-group row w-50 m-auto">
        <img src="/static/imgs/update.png" alt="update" class="img-fluid" />
        <hr />
        <div class="form-group col-12 col-sm-6">
          <label> Nombre </label>
          <input
            class="form-control m-auto"
            type="text"
            name="name"
            value="{{this.name}}"
            required
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label> Apellido </label>
          <input
            class="form-control m-auto"
            type="text"
            name="lastname"
            value="{{this.lastname}}"
            required
          />
        </div>
        <div class="form-group col-12 col-sm-6">
          <label> Email </label>
          <input
            class="form-control m-auto"
            type="email"
            name="email"
            value="{{this.email}}"
            required
          />
        </div>
        <label for="foto">Foto de perfil</label>
        <input type="file" name="foto" value="{{this.foto}}" />

        <button
          href="/edit/{{this.id}}"
          class="btn mt-2 p-2 text-light"
          style="background-color:#8033FF;"
        >
          Actualizar
        </button>

      </div>
    </form>
  {{/each}}
</div>