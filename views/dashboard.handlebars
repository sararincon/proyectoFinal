<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/static/style.css">

    <title>Proyecto</title>
  </head>

  <header>
        {{!-- Navbar --}}
        {{> navbar }}
    </header>

  

      <section class="container mt-5">
       
        <article class="row">

             <div class="col-md-6">
            <h3>Agregar Tarea</h3>
            <form method="post" action="/dashboard">
              <input
                type="text"
                name="todo"
                placeholder="Ingrese Tarea"
                class="form-control mb-2"
              />
              <button class="btn-dark w-100 p-2">Agregar</button>
            </form>
             <img src="../static/imgs/login.png" class="img-fluid" alt="">
            
          </div>
          <div class="col-md-6">
            <ul class="list-group list-group-flush" id="todoContainer">
              {{#each formattedResponse}}
                <li class="list-group-item" id="todoItem">
                  
                  <span>{{this.task_name}}</span> 
                   <p hidden>{{this.id}}</p>
                   
      
                  
                  
                     <button class="btn btn-sm float-end">
                      <a
                      href="/dashboard/delete/{{this.id}}"
                      class="list-group-item list-group-item-action bg-primary text-white"
                    ><i class="bi bi-trash-fill"></i> Eliminar</a></button>
                    {{!-- <a  href="/dashboard/edit/{{this.id}}" class="btn btn-primary">Editar </a> --}}
                  <button
                    class="btn btn-sm float-end me-3"
                    id="editTodo"
                    data-id="{{this.id}}"
                  ><a
                      class="list-group-item list-group-item-action bg-light"
                    ><i class="bi bi-pencil-fill"></i> Editar</a></button>
                </li>
                 
                    
                 
              {{/each}}
            </ul>
          </div>

       
          
        </article>
      </section>

     

    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
      integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
      integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
      crossorigin="anonymous"
    ></script>

    <script src="../static/js/dashboard.js" defer></script>
  </body>
</html>