<div class="container d-flex justify-content-center flex-wrap">

  <h1 class="bi bi-journal-code text-center"> REGISTRO</h1>

  <form action="/registro" method="post" enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" type="text" name="name" required />
      </div>

      <div class="form-group col-12 col-sm-6">
        <label>Apellido</label>
        <input
          class="form-control m-auto"
          type="text"
          name="lastname"
          required
        />
      </div>

      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" type="email" name="email" required />
      </div>

      <div class="form-group col-12 col-sm-6">
        <label>Contrase√±a</label>
        <input
          class="form-control m-auto"
          type="password"
          name="password"
          required
        />
      </div>

      <label for="foto">Foto de perfil</label>
      <input type="file" name="foto" />
      <button
        class="btn mt-2 p-2 text-light"
        style="background-color:#8033FF;"
      >Registrarme</button>
      <button href="#" class="btn btn-light mt-2 p-2"> Login</button>

    </div>

  </form>
</div>

